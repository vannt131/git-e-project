<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Eyeonic - Radius website</title>

    <%- include("stylesheet.ejs") %>
    <link rel="stylesheet" href="/css/shopping_cart.css">
    <link rel="stylesheet" href="/css/popular_product.css">
</head>
<body>
<%- include("header.ejs") %>
<section class="section">
    <div class="breadcrumb">
        <h3>Shopping cart</h3>
        <ul class="menu-item">
            <li><a href="/">Home</a></li>
            <li>Shopping cart</li>
        </ul>
    </div>
    <div class="shop-cart" id="client-height">
            <table class="table">
                <thead>
                    <tr class="title">
                        <th><h4>Product</h4></th>
                        <th><h4>Unit Price</h4></th>
                        <th><h4>Quantity</h4></th>
                        <th><h4>Total</h4></th>
                        <th><h4>Operation</h4></th>
                    </tr>
                </thead>
                <tbody>
                <% for (var i=0; i<products_cart.length; i++){ %>
                    <tr class="product">
                        <td>
                            <div class="product-img col-md-4">
                                <a href="/products/detail-product?id=<%= products_cart[i].IDProduct %>"><img src="<%= products_cart[i].CartProductImage %>" alt=""></a>
                            </div>
                            <div class="product-infor col-md-8">
                                <h4><a href="/products/detail-product?id=<%= products_cart[i].IDProduct %>"><%= products_cart[i].CartProductName %></a></h4>
                            </div>
                        </td>
                        <td>
                            <div class="product-price">
                                <h3>$<%= products_cart[i].CartProductPrice %></h3>
                            </div>
                        </td>
                        <td>
                            <div class="buttons_added">
                                <input class="minus is-form" type="button" value="-">
                                <input aria-label="quantity" class="input-qty" max="99" min="1" name="" type="number" value="1">
                                <input class="plus is-form" type="button" value="+">
                            </div>
                        </td>
                        <td>
                            <div class="product-price">
                                <h3>$<span id="total-product"><%= products_cart[i].CartProductPrice %></span></h3>
                            </div>
                        </td>
                        <td>
                            <div class="delete">X</div>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
    </div>
        <div class="total-payment-fixed">
        <div class="discount">
            <div class="adver">
                <p>Enter fake discount code now to get more discount --></p>
            </div>
            <div class="discount-content">
                <input type="text" class="discount-text" placeholder="Enter discount code">
                <button type="button">Apply</button>
            </div>
        </div>
        <div class="total">
            <div class="checkout">
                <div>
                    <h4>Total payment(2 product): <span style="color: #ed0f0f">$248.40<h4 id="total-payment"></h4></span></h4>
                </div>
                <div>
                    <h3><a href="/check-out">Checkout</a></h3>
                </div>
            </div>
        </div>
    </div>
    <%- include("popular_product.ejs") %>
</section>
<%- include("footer.ejs") %>
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/js_all.js"></script>
<script type="text/javascript" src="/js/shopping_cart.js"></script>
</body>
</html>