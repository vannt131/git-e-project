<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Check out</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <%- include("stylesheet.ejs") %>
    <link rel="stylesheet" href="/css/shopping_cart.css">
    <link rel="stylesheet" href="/css/checkout.css">
</head>
<body>
<%- include("header.ejs") %>
<section class="section">
    <div class="breadcrumb">
        <h3>Checkout</h3>
        <ul class="menu-item">
            <li><a href="/">Home</a></li>
            <li><a href="/checkout">Checkout</a></li>
        </ul>
    </div>
    <div class="shop-cart">
        <div class="col-lg-6 product-cart" >
            <h1>YOUR ORDER</h1>
                <table class="table">
                    <thead>
                    <tr class="title">
                        <th><h4>No</h4></th>
                        <th><h4>Product Name</h4></th>
                        <th><h4>Quantity</h4></th>
                        <th><h4>Unit Price</h4></th>
                        <th><h4>Total</h4></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><h4>1</h4></td>
                        <td><h4><a href="">Roadies Rd-202 Round Protection</a></h4></td>
                        <td>
                            <h4>2</h4>
                        </td>
                        <td><h4>$68.00</h4></td>
                        <td><h4>$136.00</h4></td>
                    </tr>
                    <tr>
                        <td><h4>2</h4></td>
                        <td><h4><a href="">Roadies Rd-202 Sun glass</a></h4></td>
                        <td>
                            <h4>1</h4>
                        </td>
                        <td><h4>$68.00</h4></td>
                        <td><h4>$68.00</h4></td>
                    </tr>
                    </tbody>
                </table>

                <div style="box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">
                    <div class="payment">
                        <div class="checkout">
                            <div>
                                <h4>Total payment(2 product): <span style="color: #ed0f0f">$204.00</span></h4>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="col-lg-6 product-cart" >
            <h3>BILLINGS DETAILS</h1>
                <form action="">
                    <div class="input-fields">
                        <label for="name">Full Name *</label>
                        <input type="text" id="name" class="form-control" required>
                    </div>
                    <div class="input-fields">
                        <label for="email">Email Address</label>
                        <input type="text" id="email" class="form-control">
                    </div>
                    <div class="input-fields">
                        <label for="phone">Phone Number *</label>
                        <input type="text" id="phone" class="form-control" required>
                    </div>
                    <div class="input-fields">
                        <label for="phone">Address *</label>
                        <textarea class="form-control"></textarea>
                    </div>
                    <div class="input-fields">
                        <label class="radio-inline"><input type="radio" name="optradio" checked>Pay on delivery</label>
                        <label class="radio-inline"><input type="radio" name="optradio" disabled>Online payment</label>
                    </div>
                    <div class="checkout">
                        <h3>Place Order</h3>
                    </div>
                </form>
        </div>
    </div>
</section>
<%- include("footer.ejs") %>
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/js_all.js"></script>
</body>
</html>