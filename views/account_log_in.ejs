<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Eyeonic - Radius website</title>

    <%- include("stylesheet.ejs") %>
    <link rel="stylesheet" href="/css/account.css">
</head>
<body>
<%- include("header.ejs") %>
<section class="section">
    <div class="breadcrumb">
        <h3>Log In To Your Account</h3>
        <ul class="menu-item">
            <li><a href="/">Home</a></li>
            <li><a href="/account-log-in">Log in to your account</a></li>
        </ul>
    </div>
    <div class="account">
        <div class="wrapper-img col-md-5">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/7c/User_font_awesome.svg/2048px-User_font_awesome.svg.png" alt="">
        </div>
        <div class="form-account col-md-7">
            <form method="get" action="#">
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <input class="form-input" type="email" placeholder="Type your username" required>
                </div>
                <div class="form-group">
                    <i class="fa fa-key"></i>
                    <input class="form-input show-password" type="password" placeholder="Type your password" required>
                    <div class="eye">
                        <i class="fa fa-eye"></i>
                    </div>
                </div>
                <div style="margin-left: -200px;">
                    <label><input type="checkbox">Remember me</label>
                </div>
                <div>
                    <button class="sign-btn" type="submit"><h4>Log In</h4></button>
                </div>
            </form>
            <div class="account-sub">
                <p>Forgot <a href="/account-forgot-password">Username/Password ?</a></p>
                <p><a href="/account-sign-up">Create a new account <i class="fa fa-arrow-right"></i></a></p>
            </div>
        </div>
    </div>
</section>
<%- include("footer.ejs") %>
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/js_all.js"></script>
<script type="text/javascript" src="/js/account_show_pass.js"></script>
</body>
</html>